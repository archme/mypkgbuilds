# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=openrc
pkgver=0.6.6
pkgrel=1
pkgdesc="OpenRC manages the services, startup and shutdown of a host"
arch=('i686' 'x86_64')
url="http://www.gentoo.org/proj/en/base/openrc"
license='BSD-2'
source=("http://mir0.gentoo-fr.org/distfiles/$pkgname-$pkgver.tar.bz2")

build() {
        cd $srcdir/$pkgname-$pkgver
        make || return 1

        cd $srcdir/$pkgname-$pkgver
        make DESTDIR=$pkgdir install

        # we cannot have anything turned on by default
        rm -f $pkgdir/etc/runlevels/*/*

        # we provide our own services
        rm -f $pkgdir/etc/init.d/*

        # our services
        for i in $srcdir/init.d/*; do
               install -Dm755 $i $pkgdir/etc/init.d/$i
        done

        for i in $srcdir/conf.d/*; do
               install -Dm644 $i $pkgdir/etc/conf.d/$i
        done

        # our hook functions
        install -Dm755 $srcdir/openrc.functionsd $pkgdir/etc/rc.d/functions.d/openrc

        # rc.conf for opnerc
        mv $pkgdir/etc/rc.conf $pkgdir/etc/rc.conf.orc
}

md5sums=("4eedc42c1d5e3aa453bca7dea8eac680")
